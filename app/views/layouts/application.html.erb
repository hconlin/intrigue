    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link anchor" id="about-link">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link anchor" id="services-link">Services</a>
        </li>
        <li class="nav-item">
          <a class="nav-link anchor" id="contact-us-link">Contact Us</a>
        </li>
        <li class="nav-item">
          <a class="nav-link anchor" id="gallery-link" href="<%= gallery_path %>">Photo Gallery</a>
        </li>
        <% if current_user %>
          <li class="nav-item">
            <a class="nav-link" href="<%= admin_panel_path %>"><b>Admin Panel</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= session_destroy_path%>"><b>Logout</b></a>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
  </div>
    <%= yield %>
  </body>
  <footer class="page-footer font-small blue pt-4" style="padding-top: 0 !important;">

    <div class="footer-copyright text-center py-3">
      <div class="footer-column">
